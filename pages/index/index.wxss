/**index.wxss**/
page{
  margin: 0;
  padding: 0;
  background-color: #f8f8f8;
}
.top{
  width: 100vw;
  height:410rpx;
  background-color: #f2c81f;
}
.search{
  width: 100vw;
  height: 100rpx;
  line-height: 100rpx;
  position: relative;
  margin-bottom: 20rpx;
}
.search image:nth-child(1){
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 40rpx;
  top: 28rpx;
}
.search button{
  margin: 0;
  padding: 0;
  border: 1px solid transparent;  
  outline: none; 
  background: none;
}
.search button:after{
  border: 0;
}
.search button .sao_icon{
  width: 50rpx;
  height: 40rpx;
  position: absolute;
  top: 18rpx;
  left: 28rpx;
}
.search .search_input{
  font-family: "黑体";
  font-size: 28rpx;
  color: #999;
  width:74vw;
  height: 80rpx;
  float: left;
  line-height: 80rpx;
  background-color: #fff;
  border-radius: 60rpx;
  margin-top: 13rpx;
  margin-left: 20rpx;
  padding-left: 80rpx;
}
.search button text{
  color: #fff;
  font-family: "黑体";
  font-size: 28rpx;
  margin-top:43rpx;
  display:block;
}
.pie{
  width: 95vw;
  height: 500rpx;
  margin: auto;
  border-radius: 20rpx;
  background-color: #fff;
  margin-top: 80rpx;
  overflow: hidden;
}
.pie_title{
  font-family: "黑体";
  color: #000;
  font-size: 30rpx;
  font-weight: 600;
  margin-top: 10rpx;
  margin-left: 20rpx;
}


.advertising{
  width: 95vw;
  height: 360rpx;
  margin: auto;
}
.advertising image{
  width: 95vw;
  height: 360rpx;
}
.company_title{
  width: 96vw;
  height: 100rpx;
  line-height: 100rpx;
  font-weight: 600;
  padding:0 2vw;
  font-family: "黑体";
  font-size: 44rpx;
  color: #353535;
}
.company{
  width: 96vw;
  height: 530rpx;
  margin: auto;
  display: -webkit-flex !important; /* Safari */
  display: flex !important;
  flex-direction: row !important;
  justify-content:space-between !important;
}
.company_lists{
  width: 50% !important;
  height: 530rpx ;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}
.company_list{
  width: 47vw !important;
  height: 530rpx !important;
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
}
.company_list image{
  width: 100%;
  height:280rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.company_list .introduce{
  font-size: 28rpx;
  font-family: "黑体";
  color: #353535;  
  width: 96%;
  padding: 2%;
  display: block;
}
.even-ellipsis{
  display:-webkit-box !important;
  overflow:hidden;
  text-overflow:ellipsis;
  word-break:break-all;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
}
.odd-ellipsis{overflow:hidden;white-space:nowrap;text-overflow:ellipsis;}
.company_list .label{
  padding: 6rpx 14rpx;
  border: 2rpx solid #ec6e63;
  font-family: "黑体";
  font-size: 28rpx;
  color: #353535;
  text-align: center;
  float: right;
  border-radius: 12rpx;
  position:absolute;
  right:20rpx;
  bottom:106rpx;
}
.adress{
  position: absolute;
  bottom: 0;
  width: 100%;
}
.adress image{
  width: 50rpx;
  height: 60rpx;
  float: left;
  margin: 2%;
}
.adress text{
  font-family: "黑体";
  font-size: 24rpx;
  color:#666;
  display: block;
  line-height: 60rpx;
  float: left;
}
.product_title{
  width: 96vw;
  height: 100rpx;
  line-height: 100rpx;
  font-weight: 600;
  padding:0 2vw;
  font-family: "黑体";
  font-size: 44rpx;
  color: #353535;
}
.product{
  width: 100%;
}
.product_list{
  width: 96vw;
  height: 240rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin: auto;
  margin-bottom: 10rpx;
}
.product_list .pro{
  width: 210rpx;
  height: 210rpx;
  margin-top: 15rpx;
  margin-left: 10rpx;
  float: left;
}
.pro_right{
  width: 68%;
  height: 210rpx;
  margin-top: 10rpx;
  float:left;
  margin-left: 10rpx;
  position: relative;
}
.pro_info{
  font-family: "黑体";
  font-size: 32rpx;
  color: #353535;
  position: absolute;
  top: 10rpx;
}
.check{
  float: right;  
  height: 40rpx;
  line-height: 40rpx;
  position: absolute;
  right: 14rpx;
  top: 100rpx;
}
.check image{
  width: 60rpx;
  height: 40rpx;
  margin-top: 5rpx;
  float: left;
}
.check text{
  font-family: "黑体";
  font-size: 28rpx;
  color: #666;  
  padding-left: 10rpx;
  float: left;
}
.pro_adress{
  font-family: "黑体";
  font-size: 26rpx;
  color: #999;
  float: left;
  position:absolute;
  bottom:10rpx;

}

ec-canvas {
  width: 100%;
  height:500rpx;
}
.container{
  display:flex;
  flex-direction:column;
  align-items:center;
  justify-content:space-between;
  box-sizing:border-box;
}
.scroll-header .container{
  width: 100%;
  height:450rpx;
  display: inline-block; 
  border:1px solid red;

}
.scroll-header{
  display: flex;
  white-space: nowrap; 
}