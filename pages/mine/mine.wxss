/* pages/mine/mine.wxss */
page{
  background-color: #f8f8f8;
  margin: 0;
  padding: 0;
}
.top{
  width: 100%;
  height: 125rpx;
  background-color: #f2c81f;
  padding-top: 25rpx;
  margin-bottom: 70rpx;
}
.header{
  width: 90vw;
  height: 178rpx;
  line-height: 178rpx;
  background-color: #fff;
  margin: auto;
  border-radius: 20rpx;
}
.header image{
  width: 136rpx;
  height: 136rpx;
  border-radius: 50%;
  margin: 21rpx;
  float: left;
}
.header text{
  float: left;
  font-family: "黑体";
  font-size:36rpx;
}
.approve{
  float: right;
  font-family: "黑体";
  color: #ec6e63;
  border: 2rpx solid #ec6e63;
  font-size: 34rpx;
  width: 200rpx;
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
  border-right: 0;
  border-bottom-left-radius:40rpx;
  border-top-left-radius:40rpx;
  margin-top: 50rpx;
}
.register{
  width: 90vw;
  padding-bottom: 20rpx;
  background-color: #fff;
  margin: auto;
  margin-top: 80rpx;
  border-radius: 20rpx;
  overflow: hidden;
}
.register .register_title{
  font-family: "黑体";
  font-size: 36rpx;
  font-weight:600;
  margin-top: 18rpx;
  margin-left: 18rpx;
}
.button {
  width: 387rpx;
  text-align: center;
  height: 90rpx;
  background: -webkit-linear-gradient(left, #f9c852 , #fee870); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(right, #f9c852, #fee870); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(right, #f9c852, #fee870); /* Firefox 3.6 - 15 */
  background: linear-gradient(to right, #f9c852 , #fee870); /* 标准的语法 */
  border-radius: 50rpx;
  line-height: 90rpx;
  margin: 32rpx auto;
  /* margin-top: 33rpx; */
  font-family: "黑体";
  font-size: 38rpx;
  color:#353535;
}
.button image{
  width: 40rpx;
  height: 40rpx;
  position: relative;
  top: 7rpx;
}
.tip{
  width: 100%;
  text-align: center;
  font-family: "黑体";
  font-size: 24rpx;
  color: #ec6e63;
  margin-top:22rpx;
  margin-left:15rpx;
}
.not{
  width: 100%;
  display: inline-block;
}
.odl{
  width: 90vw;
  height: 90rpx;
  line-height: 90rpx;
  margin: auto;
  background-color: #fff;
  border-radius: 20rpx;
  margin-top: 20rpx;
  position: relative;
}
.odl text{
  font-family: "黑体";
  font-size: 32rpx;
  color: #353535;
  float: left;
  padding-left: 20rpx;
}
.odl image{
  width: 20rpx;
  height: 32rpx;
  position:absolute;
  right:30rpx;
  top:29rpx;
}
.write{
  width: 100%;
}
.write input{
  width: 80%;
  margin:24rpx auto;
  height: 60rpx;
  line-height: 60rpx;
  font-family: "黑体";
  font-size: 28rpx;
  color: #c1c1c1;
  border-bottom: 1px solid #eee;
  padding-left: 30rpx;
}
.none{
  display: none;
}
